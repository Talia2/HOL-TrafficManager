<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head runat="server">
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/themes/base/css", "~/Content/css")
        <style type="text/css">
            body
            {
                background-color: @(RoleEnvironment.GetConfigurationSettingValue("HostedServiceBackgroundColor"));
            }
        </style>
    </head>
    <body>
        <div class="page">

            <div id="header">
                <div id="title">
                    <h1>World Application <span class="region">@RoleEnvironment.GetConfigurationSettingValue("HostedServiceRegion")</span></h1>
                </div>
              
                <div id="logindisplay">
                    @Html.Partial("_LoginPartial")
                </div> 
            
                <div id="menucontainer">
            
                    <ul id="menu">              
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
            
                </div>
            </div>

            <div id="main">
                @RenderBody()

                <div id="footer">
                </div>
            </div>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>